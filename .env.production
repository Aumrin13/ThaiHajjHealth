# Production Environment Variables for Thai Hajj Health System

# Application Settings
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0
NEXT_PUBLIC_APP_URL=https://thaihajjhealth.southhealthcenter.com

# API Configuration  
NEXT_PUBLIC_API_URL=https://api-thaihajjhealth.southhealthcenter.com
API_BASE_URL=https://api-thaihajjhealth.southhealthcenter.com

# ThaiD OAuth Configuration (Production)
NEXT_PUBLIC_THAID_CLIENT_ID=your_production_thaid_client_id
THAID_CLIENT_SECRET=your_production_thaid_client_secret
NEXT_PUBLIC_THAID_REDIRECT_URI=https://thaihajjhealth.southhealthcenter.com/auth/thaid/callback
NEXT_PUBLIC_THAID_AUTH_URL=https://imauth.bora.dopa.go.th/oauth2/authorize
THAID_TOKEN_URL=https://imauth.bora.dopa.go.th/oauth2/token
THAID_USER_INFO_URL=https://imauth.bora.dopa.go.th/api/user

# Security
NEXTAUTH_SECRET=your_nextauth_secret_key_for_production_make_it_very_long_and_complex
NEXTAUTH_URL=https://thaihajjhealth.southhealthcenter.com

# Performance
NEXT_PUBLIC_ENABLE_ANALYTICS=true